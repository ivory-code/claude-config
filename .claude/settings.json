{
  // Claude Code 설정 파일
  // 자동 코드 리뷰 Hook 설정

  "hooks": {
    // tool-post: 특정 도구 실행 후 자동으로 실행되는 Hook
    "tool-post": {
      // Edit 도구 사용 후 자동으로 코드 리뷰 스크립트 실행
      "Edit": "./.claude/scripts/code-review.sh \"{{file_path}}\"",

      // Write 도구 사용 후 자동으로 코드 리뷰 스크립트 실행
      "Write": "./.claude/scripts/code-review.sh \"{{file_path}}\""
    }
  }

  // 검사 항목:
  // 1. 보안 이슈: API 키, Secret, 비밀번호 하드코딩, eval() 사용
  // 2. 안티패턴: console.log, 사용하지 않는 변수
  // 3. 참고사항: TODO/FIXME 코멘트

  // 검사 대상 파일: .js, .jsx, .ts, .tsx, .vue, .py, .java, .go, .rb, .php
  // 제외 파일: .env 파일은 커밋 시도 검사에서 제외
}
